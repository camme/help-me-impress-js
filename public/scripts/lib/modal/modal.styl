#overlay
    position fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.65);
    transition: opacity 300ms;
    z-index: 500;
    pointer-events: none;
    transition: all 0.3s;
    opacity: 0;

#overlay.show 
    opacity: 1;


.modal-dialog
    position: fixed;
    background-color white
    padding 0rem 2rem 1.5rem
    box-sizing border-box
    border-radius 10px
    top: 50%;
    left: 50%;
    width: 50%;
    max-width: 830px;
    min-width: 320px;
    height: auto;
    z-index: 2000;
    visibility: hidden;
    transform-style: preserve-3d;
    transform: translateX(-50%) translateY(-50%);


.modal-show .modal-dialog
    visibility: visible;


.modal-dialog-wrapper
    transition: all 0.3s;
    opacity: 0;
    transform: scale(0.3);
    background: white;


.modal-show.modal-dialog-wrapper
    transform: scale(1);
    opacity: 1;


