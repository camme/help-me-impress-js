borderColor = #666

html
    display flex
    flex-direction column
    height 100%
    min-height 100%

body
    height 100%
    font-family helvetica, sans-serif
    margin 2rem
    display flex
    box-sizing border-box
    background-color #333
    flex 1

.main
    display flex
    flex-direction column
    flex 1

.bottom
    display flex
    flex 1
    flex-direction row

.right
    display flex
    flex-direction column
    flex 1
    margin-left .6rem

.left
    flex 1
    flex-direction column
    display flex
    margin-right .6rem

.top
    margin-bottom 1rem
    display flex

h1
    flex 1
    margin 0
    padding 0
    color #eee

.clock
    color #bbb
    display flex
    .hours, .minutes, .seconds
        font-size 2rem
        width 3rem
    .hours:after, .minutes:after
        content ':'
    button
        margin-left 1rem
        border-radius 5px
        background-color orange
        border 0 solid orange
        font-size 0.7rem
        padding-left 1rem
        padding-right 1rem
        transition all .5sec ease-out
        font-weight bold
        cursor pointer
        &:focus
            outline 0
        &:hover
            background-color #999

.bottom
    display flex

.embed-code
    width 100%
    box-sizing border-box
    font-size 1.2rem
    color #666
    padding .5rem
    border 1px dashed #666
    margin-bottom 1rem
    background-color #333

iframe
    border 1px solid borderColor
    flex 1

#preview-current
    margin-bottom .5rem

.preview-header, #comment-header
    margin 0
    padding 0
    font-size .9rem
    font-weight normal
    text-transform lowercase
    text-align center
    color #aaa
    padding-bottom .2rem

textarea
    background-color #333
    color #eee
    flex 1
    padding 0
    margin 0
    font-weight bold
    line-height 2rem
    margin-bottom .5rem
    border 1px solid borderColor
    font-size 1.5em
    padding 1rem
    box-sizing border-box
    resize none
    &:focus
        outline 0
